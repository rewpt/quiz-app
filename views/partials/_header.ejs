<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">Quiz-app</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My Quizzes</a>
        <a class="nav-item nav-link" href="/urls/new">My Results</a>
      </div>
    </div>
    <div>
      <% if ( name ) { %>
        <form class="form-inline" action="/logout" method="POST">
          <div class="form-group">
            <span class="nav-item mr-sm-2">Logged in as <%= name %></span>
            <button type="submit" class="btn btn-success btn-outline-dark">Logout</button>
          </div>
        </form>
        <% } else { %>
          <div class="navBtn">
            <a href="/login"><button type="submit" class=" mr-2 btn btn-success btn-outline-dark">Login</button></a>
          </div>
          <% } %>
    </div>
  </nav>
</header>
